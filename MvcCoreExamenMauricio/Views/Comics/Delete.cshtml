@model Comic
<h1>¿Estás seguro de que deseas borrar el siguiente cómic?</h1>
<ul class="list-group">
    <li class="list-group-item">@Model.IdComic</li>
    <li class="list-group-item">@Model.Nombre</li>
    <li class="list-group-item"><img src="@Model.Imagen" style="width:100px;height:100px;" /></li>
    <li class="list-group-item">@Model.Descripcion</li>
</ul>
<a asp-action="DeleteConfirm" asp-controller="Comics" asp-route-idcomic="@Model.IdComic" class="btn btn-danger">Borrar</a>
<a asp-action="Index" asp-controller="Comics" class="btn btn-info">Cancelar</a>
