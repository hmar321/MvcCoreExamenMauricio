<h1>Nuevo Comic</h1>

<p>
    <a asp-controller="Comics"
       asp-action="Index">
        Back to Index
    </a>
</p>

<form method="post">
    <label>Nombre</label>
    <input type="text" name="nombre" class="form-control" />
    <label>Imagen</label>
    <input type="text" name="imagen" class="form-control" />
